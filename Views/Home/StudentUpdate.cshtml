<div class="row mt-3  ">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">دانشجو ها</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover">
                    <tr>
                        <th>شماره</th>
                        <th>نام</th>
                        <th>نام خانوادگی</th>
                        <th>نام پدر</th>
                        <th>کدملی</th>
                        <th>شماره تلفن</th>
                        <th>ویرایش</th>

                    </tr>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <th>@i.StudentId</th>
                            <td>@i.Name</td>
                            <td>@i.Family</td>
                            <td>@i.FatherName</td>
                            <td>@i.NationalCode</td>
                            <td>@i.PhoneNumber</td>
                            <td><a href="/StudentUpdatee?Id=@i.StudentId"><button class="btn btn-sm btn-primary">ویرایش</button></a></td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
